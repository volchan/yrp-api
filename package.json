{
  "name": "yrp-api",
  "packageManager": "yarn@4.0.1",
  "scripts": {
    "postinstall": "husky install",
    "dev": "yarn dev:db:start && ts-node-dev -r tsconfig-paths/register --respawn --deps --transpile-only src/index.ts",
    "dev:db:start": "docker compose up -d",
    "dev:db:stop": "docker compose down",
    "lint": "eslint --fix --ext .ts src",
    "format": "prettier --write \"./**/*.ts\"",
    "db:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs db:create",
    "db:drop": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs db:drop",
    "db:migrate": "NODE_OPTIONS='-r tsconfig-paths/register' typeorm-ts-node-commonjs -d ./src/data-source.ts migration:run",
    "db:seed": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:run",
    "db:reset": "yarn db:drop && yarn db:create && yarn db:migrate && yarn db:seed",
    "seed:create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm-extension/bin/cli.cjs seed:create",
    "migration:generate": "NODE_OPTIONS='-r tsconfig-paths/register' typeorm-ts-node-commonjs -d ./src/data-source.ts migration:generate ./src/migrations/${0}",
    "migration:create": "NODE_OPTIONS='-r tsconfig-paths/register' typeorm-ts-node-commonjs migration:create ./src/migrations/${0}"
  },
  "dependencies": {
    "@faker-js/faker": "^8.2.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "config": "^3.3.9",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "enforce-unique": "^1.2.0",
    "express": "^4.18.2",
    "express-requests-logger": "^4.0.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typeorm-extension": "^3.1.1",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.2.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@linnify/typeorm-factory": "^1.0.12",
    "@types/bcrypt": "^5",
    "@types/config": "^3.3.2",
    "@types/cookie-parser": "^1.4.5",
    "@types/cors": "^2.8.15",
    "@types/eslint": "^8.44.6",
    "@types/express": "^4.17.20",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.7",
    "@types/mysql": "^2",
    "@types/node": "^20.8.10",
    "@types/pg": "^8",
    "@types/redis": "^4.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.53.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  }
}
